<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-6 mx-1">
            <h3 class="text-center mb-4">Need to reach us? Fill out the form below</h3>

            <form action="/contact" id="contact-form" method="POST" role="form" novalidate class="validated-form">
                <fieldset>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input id="name" name="name" type="text" class="form-control" required>
                        <div class="valid-feedback">All set</div>
                    </div>
                    <div class="mb-3">
                        <label for="number" class="form-label">Number</label>
                        <input id="number" name="number" type="tel" class="form-control" required>
                        <div class="valid-feedback">All set</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input id="email" name="email" type="text" class="form-control" required>
                        <div class="valid-feedback">All set</div>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea name="message" id="message" rows="3" class="form-control" required></textarea>
                        <div class="valid-feedback">All set</div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary mb-4" id="sendBtn">Send</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col"></div>
    </div>